<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetermineLevel">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/ButtonChooseLevel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="181dp"
            android:text="@string/ButtonChooseLevel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonСheckLevel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/buttonСheckLevel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ButtonChooseLevel" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>